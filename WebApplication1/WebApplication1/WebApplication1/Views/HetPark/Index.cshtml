<div class="container bg1 py-4" id="featured">
    <h1>Evenementen</h1>
    <p class="w-75 text-dark">In Keukenhof kunt u genieten van geweldige evenementen. Elke weekend zijn er verschillende evenementen, dus zoek de juiste datum voor uw bezoek uit!</p>
    <a href="#" class="d-flex flex-row-reverse text-dark text-decoration-none"><i class="fa fa-arrow-right"></i> Bekijk alle </a>
    <div class="row">
        @{ int parkcount = 0; }
        @foreach (var item in Model)
        {
            @if (parkcount > 4)
            {
               
            <div class="col-sm-3">
                <div class="card">
                    <img src="~/Images/event2.png" class="card-img-top">
                    <div class="card-body">
                        <p class="card-text"><small class="text-muted">@Html.DisplayFor(modelItem => item.Datum)</small></p>
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Naam)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Beschrijving)</p>
                        <a href="#" class="btn btn-outline-warning">Lees meer</a>
                    </div>
                </div>
            </div>
            }
            parkcount++;
        }
    </div>
</div>
